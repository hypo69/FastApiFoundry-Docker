{
  "fastapi_server": {
    "host": "0.0.0.0",
    "port": 8002,
    "mode": "dev",
    "workers": 1,
    "reload": true,
    "cors_origins": ["*"]
  },
  "foundry_ai": {
    "temperature": 0.6,
    "top_p": 0.9,
    "top_k": 40,
    "max_tokens": 2048
  },
  "rag_system": {
    "enabled": true,
    "index_dir": "./rag_index",
    "model": "sentence-transformers/all-MiniLM-L6-v2",
    "chunk_size": 1000,
    "top_k": 5
  },
  "mcp_server": {
    "name": "aistros-foundry",
    "version": "1.0.0",
    "description": "AiStros Foundry MCP Server - Interface for Microsoft Foundry local AI models",
    "author": "hypo69",
    "license": "CC BY-NC-SA 4.0",
    "homepage": "https://aistros.com",
    "mcpVersion": "2024-11-05",
    "capabilities": {
      "tools": [
        "generate_text",
        "generate_horoscope_foundry",
        "list_foundry_models",
        "get_foundry_status"
      ],
      "resources": [
        "foundry://models/list",
        "foundry://config/current"
      ]
    }
  },
  "web_interface": {
    "api_base": "http://localhost:8002/api/v1",
    "auto_refresh_interval": 30000,
    "logs_refresh_interval": 10000,
    "max_chat_history": 100
  },
  "examples": {
    "client_demo": {
      "enabled": true,
      "timeout": 30
    },
    "rag_demo": {
      "enabled": true,
      "query": "WordPress плагины AiStros",
      "top_k": 3
    },
    "mcp_demo": {
      "enabled": true
    },
    "model_demo": {
      "enabled": true
    }
  },
  "docker": {
    "image": "fastapi-foundry:0.2.1",
    "container_name": "fastapi-foundry-docker",
    "network": "fastapi-foundry-network",
    "healthcheck": {
      "interval": "30s",
      "timeout": "10s",
      "retries": 3,
      "start_period": "40s"
    },
    "volumes": [
      "./logs:/app/logs",
      "./rag_index:/app/rag_index"
    ]
  },
  "ssl": {
    "enabled": false,
    "cert_file": "certs/cert.pem",
    "key_file": "certs/key.pem"
  }
}