# -*- coding: utf-8 -*-
# =============================================================================
# Название процесса: Docker контейнер для FastApiFoundry (Docker)
# =============================================================================
# Описание:
#   Docker контейнер с виртуальным окружением Python для FastApiFoundry
#   Виртуальное окружение создается внутри контейнера
#   Используется для изоляции зависимостей и запуска run.py
#
# Примеры:
#   docker build -t fastapi-foundry:0.2.1 .
#   docker run -p 8000:8000 fastapi-foundry:0.2.1
#
# File: Dockerfile
# Project: FastApiFoundry (Docker)
# Version: 0.2.1
# Author: hypo69
# License: CC BY-NC-SA 4.0 (https://creativecommons.org/licenses/by-nc-sa/4.0/)
# Copyright: © 2025 AiStros
# Date: 9 декабря 2025
# =============================================================================

FROM ubuntu:22.04

# -----------------------------------------------------------------------------
# Установка системных зависимостей
# -----------------------------------------------------------------------------
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# -----------------------------------------------------------------------------
# Копирование Python 3.14 интерпретатора
# -----------------------------------------------------------------------------
COPY python-314/ /opt/python-314/

# -----------------------------------------------------------------------------
# Настройка PATH для Python 3.14
# -----------------------------------------------------------------------------
ENV PATH="/opt/python-314/bin:$PATH"
ENV PYTHONPATH=/app

# -----------------------------------------------------------------------------
# Рабочая директория
# -----------------------------------------------------------------------------
WORKDIR /app

# -----------------------------------------------------------------------------
# Обновление pip
# -----------------------------------------------------------------------------
RUN python -m pip install --upgrade pip

# -----------------------------------------------------------------------------
# Установка Python-зависимостей
# -----------------------------------------------------------------------------
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# -----------------------------------------------------------------------------
# Копирование исходного кода
# -----------------------------------------------------------------------------
COPY src/ ./src/
COPY static/ ./static/
COPY docs/ ./docs/
COPY mcp-servers/ ./mcp-servers/
COPY run.py .
COPY rag_indexer.py .
COPY check_venv.py .
COPY conf.json .

# -----------------------------------------------------------------------------
# Директории данных
# -----------------------------------------------------------------------------
RUN mkdir -p logs rag_index

# -----------------------------------------------------------------------------
# Непривилегированный пользователь
# -----------------------------------------------------------------------------
RUN useradd -m -u 1000 appuser \
    && chown -R appuser:appuser /app

USER appuser

# -----------------------------------------------------------------------------
# Переменные окружения
# -----------------------------------------------------------------------------
ENV PYTHONPATH=/app
ENV PATH="/opt/python-314/bin:$PATH"
ENV HOST=0.0.0.0
ENV PORT=8000
ENV FASTAPI_FOUNDRY_MODE=production

# -----------------------------------------------------------------------------
# Порт приложения
# -----------------------------------------------------------------------------
EXPOSE 8000

# -----------------------------------------------------------------------------
# Проверка виртуального окружения
# -----------------------------------------------------------------------------
RUN python check_venv.py

# -----------------------------------------------------------------------------
# Запуск приложения
# -----------------------------------------------------------------------------
CMD ['python', 'run.py']
