# =============================================================================
# РЕЖИМ РАБОТЫ
# =============================================================================
# Режим по умолчанию: dev или prod (используется когда не указаны флаги --dev/--prod)
DEFAULT_MODE=dev

# =============================================================================
# FOUNDRY AI SERVER SETTINGS
# =============================================================================
# URL Foundry сервера
FOUNDRY_BASE_URL=http://localhost:50477/v1/

# Модель по умолчанию
FOUNDRY_DEFAULT_MODEL=deepseek-r1-distill-qwen-7b-generic-cpu:3

# Параметры генерации
FOUNDRY_TEMPERATURE=0.6
FOUNDRY_TOP_P=0.9
FOUNDRY_TOP_K=40
FOUNDRY_MAX_TOKENS=2048
FOUNDRY_TIMEOUT=300

# =============================================================================
# FASTAPI SERVER SETTINGS
# =============================================================================
# Хост и порт для API сервера
API_HOST=0.0.0.0
API_PORT=8000

# Режим разработки (автоперезагрузка)
API_RELOAD=false

# Количество воркеров
API_WORKERS=1

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# API ключ (оставить пустым для отключения аутентификации)
API_KEY=

# CORS origins (JSON массив)
CORS_ORIGINS=["*"]

# =============================================================================
# SSL/HTTPS SETTINGS
# =============================================================================
# Включить HTTPS
HTTPS_ENABLED=false

# Пути к SSL сертификатам
SSL_CERT_FILE=~/.ssl/cert.pem
SSL_KEY_FILE=~/.ssl/key.pem

# =============================================================================
# RAG SYSTEM SETTINGS
# =============================================================================
# Включить RAG систему
RAG_ENABLED=true

# Директория для индекса RAG
RAG_INDEX_DIR=./rag_index

# Модель для эмбеддингов
RAG_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Размер чанков для RAG
RAG_CHUNK_SIZE=1000

# Количество результатов поиска
RAG_TOP_K=5

# =============================================================================
# LOGGING SETTINGS
# =============================================================================
# Уровень логирования: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Файл для логов
LOG_FILE=logs/fastapi-foundry.log

# =============================================================================
# MCP SERVER SETTINGS (для интеграции с Claude Desktop)
# =============================================================================
# URL MCP Foundry сервера
MCP_FOUNDRY_BASE_URL=http://localhost:51601/v1/

# Модель для MCP сервера
MCP_FOUNDRY_DEFAULT_MODEL=deepseek-r1-distill-qwen-7b-generic-cpu:3

# Таймаут для MCP запросов
MCP_FOUNDRY_TIMEOUT=30

# =============================================================================
# DOCKER SETTINGS
# =============================================================================
# Хост Foundry в Docker
DOCKER_FOUNDRY_HOST=localhost

# Порт Foundry в Docker
DOCKER_FOUNDRY_PORT=8008

# Включить RAG в Docker
DOCKER_RAG_ENABLED=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Включить отладочный режим
DEBUG=false

# Включить подробные логи
VERBOSE=false

# Директория для временных файлов
TEMP_DIR=./temp

# =============================================================================
# EXTERNAL SERVICES (опционально)
# =============================================================================
# URL внешней базы данных
# DATABASE_URL=

# Ключи внешних API
# EXTERNAL_API_KEY=
# EXTERNAL_SERVICE_URL=