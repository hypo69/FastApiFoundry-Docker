# FastAPI Foundry Configuration Example
# Скопируйте этот файл в .env и настройте под ваши нужды

# Foundry AI Server Settings
FOUNDRY_BASE_URL=http://localhost:5272/v1/
FOUNDRY_DEFAULT_MODEL=deepseek-r1-distill-qwen-7b-generic-cpu:3
FOUNDRY_TEMPERATURE=0.6
FOUNDRY_TOP_P=0.9
FOUNDRY_TOP_K=40
FOUNDRY_MAX_TOKENS=2048
FOUNDRY_TIMEOUT=300

# FastAPI Server Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
API_WORKERS=1

# Security Settings (оставить пустым для отключения аутентификации)
API_KEY=
CORS_ORIGINS=["*"]

# SSL/HTTPS Settings
HTTPS_ENABLED=false
SSL_CERT_FILE=~/.ssl/cert.pem
SSL_KEY_FILE=~/.ssl/key.pem

# RAG System Settings
RAG_ENABLED=true
RAG_INDEX_DIR=./rag_index
RAG_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=logs/fastapi-foundry.log